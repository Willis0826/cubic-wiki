datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model WikiPage {
  id           Int     @id @default(autoincrement())
  // the repo url to generate the wiki page
  repoUrl      String  @unique
  // the branch of the repo
  branch       String  @default("main")
  // the title of the repo
  title        String
  // the summary of the repo
  // markdown format
  summary      String  @db.Text
  // a shorter version of the summary
  // used for the wiki page list
  shortSummary String? @db.Text

  // the subsystems of the repo
  subsystems Subsystem[]
  // general fields
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Subsystem {
  id           Int       @id @default(autoincrement())
  // the title of the subsystem
  title        String
  // the summary of the subsystem
  // markdown format
  // generated by read through the files in the subsystem
  summary      String?   @db.Text
  // a shorter version of the summary
  // used for the subsystem list page
  shortSummary String    @db.Text
  // the files of the subsystem
  // JSON array of file paths
  files        Json
  // the relationship between the subsystem and the wiki page
  WikiPage     WikiPage? @relation(fields: [wikiPageId], references: [id])
  wikiPageId   Int?
}
